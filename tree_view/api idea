fn main() {
    let response = TreeView::new::<Uuid>(ui.next_auto_id())
        .highlight_odd_lines(true)
        .other_options(120.0)
        .allow_dragging(true)
        .selected_id(some_uuid)
        .default_open(false)
        .show(|ui| {
            ui.dir("uuid")
                .selectable(true)
                .draggable(false)
                .droppable(true)
                .default_open(true)
                .show(ui, |ui| {
                    ui.label("this is a directory");
                })
                .body(|ui| {
                    // This is everyhting inside the dir
                    ui.leaf("Uuid", |ui| ui.label("This is a leaf"));

                    let res = ui
                        .leaf("uuid")
                        .selectable(true)
                        .draggable(false)
                        .droppable(true)
                        .show(|ui| {
                            ui.label("this is a leaf");
                        });
                    if res.clicked() {
                        println!("leaf was clicked");
                    }
                });
        });
    for action in response.actions {
        // These are actions that were performed on the tree view
    }

    response.selected_id(); // The uuid of the selected element.

    let mut state = TreeView::load::<Uuid>(some_id);
    state.collapse_all();
    state.expand_all();
}
